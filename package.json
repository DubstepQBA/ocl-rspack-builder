{
  "name": "@dubstepqba/rspack-builder",
  "version": "2.0.0",
  "description": "Enhanced RSPack builder for Next.js 14+ applications",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "clean": "rimraf dist",
    "build": "npm run clean && tsc",
    "test": "jest --passWithNoTests",
    "lint": "eslint src --ext .ts,.tsx",
    "format": "prettier --write \"src/**/*.{ts,tsx}\"",
    "prepare": "npm run build",
    "prepublishOnly": "npm run lint"
  },
  "keywords": [
    "next.js",
    "rspack",
    "webpack",
    "bundler",
    "react"
  ],
  "author": {
    "name": "Javier Alfaro de armas",
    "email": "dubstepalfaro@gmail.com",
    "url": "https://github.com/DubstepQBA"
  },
  "license": "MIT",
  "dependencies": {
    "@rspack/core": "1.2.6"
  },
  "peerDependencies": {
    "next": ">=14.0.0",
    "react": ">=18.0.0",
    "react-dom": ">=18.0.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "typescript": "~5.1.6",
    "eslint": "^8.56.0",
    "prettier": "^3.0.0",
    "rimraf": "^5.0.0"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "repository": {
    "type": "git",
